 <style>
	 form{
		 width:50%;
		 margin:auto;
		 margin-top:200px;
		 
	 }
	 
	 input
	 {
		 margin-bottom:10px;
	 }
	
	 h1{
		margin-top:100px;
		text-align:center;
		font-size:50px;
		animation-name:moving;
		animation-duration:5s;
		animation-delay:0s;
		animation-timing-function:linear;
		animation-iteration-count:infinite;
	 }
	
	 @keyframes moving
		{
			0%{
				color:black;
			}
			
			25%{
				color:blue;
				transform: translateX(100px);
			}
			50%{
				color:red;
			}
			75%{
				color:yellow;
				transform: translateX(-100px);
			}
			100%{
				color:black;
				
			}
		}
	   
</style>
 
 
</head>



<body>
	<h1>Leave A Message</h1>

	<form action="/signin" method="post">
	
    <input name="gmail" type="email" name="emailAddress" id="inputEmail" class="form-control myFocus1" placeholder="Email address" required autofocus>
     <input name="password" type="password" name="password"  class="form-control myFocus" placeholder="Password" required>
	 <button class="btn btn-lg btn-danger btn-block mybtn" type="submit">Sign In</button>	
	</form>

</body>
